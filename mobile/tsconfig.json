{
    "compilerOptions": {
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "esModuleInterop": true,

        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "resolveJsonModule": true,

        "lib": [
            "es2017",
            "dom",
            "es6"
        ],
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "app/*"
            ],
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "platforms",
        "cothority"
    ]
}
